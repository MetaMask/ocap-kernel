{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    /*
     * This package is never built and is executed directly by Node,
     * and Node expects file extensions to match the files that are
     * actually on disk.
     */
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"]
  },
  "references": [{ "path": "../test-utils" }, { "path": "../utils" }],
  "include": ["../../vitest.config.ts", "./src", "./vitest.config.ts"],
  "exclude": ["./src/package-template"]
}
