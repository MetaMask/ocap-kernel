{
  "name": "@metamask/playground",
  "version": "0.0.0",
  "description": "An Ocap Kernel playground",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/ocap-kernel/tree/main/packages/playground#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/ocap-kernel/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/ocap-kernel.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup --config ../../tsup.config.ts --tsconfig ./tsconfig.build.json --clean",
    "build:docs": "typedoc",
    "changelog:validate": "../../scripts/validate-changelog.sh @metamask/playground",
    "publish:preview": "yarn npm publish --tag preview",
    "test": "jest --reporters=jest-silent-reporter",
    "posttest": "jest-it-up",
    "test:clean": "jest --clearCache",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@metamask/auto-changelog": "^3.4.4",
    "@types/jest": "^28.1.6",
    "deepmerge": "^4.3.1",
    "jest": "^28.1.3",
    "jest-it-up": "^2.0.2",
    "ts-jest": "^28.0.7",
    "tsup": "^8.0.2",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "~4.9.5"
  },
  "engines": {
    "node": "^18.18 || >=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
