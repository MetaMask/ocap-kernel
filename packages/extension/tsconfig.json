{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "isolatedModules": true,
    "lib": ["DOM", "ES2022"],
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["chrome", "ses", "vitest", "vitest/jsdom"]
  },
  "references": [
    { "path": "../shims" },
    { "path": "../streams" },
    { "path": "../test-utils" },
    { "path": "../utils" }
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*-trusted-prelude.js",
    "./src/dev-console.js",
    "./vite-plugins/*.ts",
    "./test/**/*.ts"
  ]
}
