{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": "./",
    "isolatedModules": true,
    "lib": ["DOM", "ES2022"],
    "noEmit": true,
    "skipLibCheck": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": [
      "chrome",
      "ses",
      "vitest",
      "vitest/jsdom",
      "@playwright/test",
      "react",
      "react-dom"
    ]
  },
  "references": [
    { "path": "../shims" },
    { "path": "../streams" },
    { "path": "../test-utils" },
    { "path": "../utils" },
    { "path": "../kernel" },
    { "path": "../store" }
  ],
  "include": [
    "../../vitest.config.ts",
    "../../vitest.workspace.ts",
    "./scripts/build-constants.mjs",
    "./playwright.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.module.css",
    "./src/**/*-trusted-prelude.js",
    "./src/env/dev-console.js",
    "./test/**/*.ts",
    "./vite-plugins/*.ts",
    "./vite.config.ts",
    "./vitest.config.ts",
    "../../types",
    "../store/src/sqlite-kv-store.ts"
  ]
}
