{
  "name": "@ocap/streams",
  "version": "0.0.0",
  "private": true,
  "description": "Ocap Kernel streams",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/ocap-kernel.git"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ts-bridge --project tsconfig.build.json --clean",
    "build:docs": "typedoc",
    "changelog:validate": "../../scripts/validate-changelog.sh streams",
    "publish:preview": "yarn npm publish --tag preview",
    "test": "vitest run --config vitest.config.mts",
    "test:clean": "yarn test --no-cache --coverage.clean",
    "test:dev": "yarn test --coverage false",
    "test:verbose": "yarn test --reporter verbose",
    "test:watch": "vitest --config vitest.config.mts"
  },
  "dependencies": {
    "@endo/promise-kit": "^1.1.2",
    "@endo/stream": "^1.2.2",
    "@metamask/utils": "^9.1.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@metamask/auto-changelog": "^3.4.4",
    "@ocap/test-utils": "workspace:^",
    "@ts-bridge/cli": "^0.1.4",
    "@ts-bridge/shims": "^0.1.1",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^2.0.5",
    "deepmerge": "^4.3.1",
    "jsdom": "^24.1.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "~4.9.5",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": "^18.18 || >=20"
  }
}
